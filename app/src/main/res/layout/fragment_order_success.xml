<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.errand.OrderSuccessFragment">

    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_attendance_check"
        app:tint="@color/primary" />

    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_success_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Order Placed Successfully!"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_success_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_success_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Your errand has been posted."
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:text="Back to Home"
        android:paddingVertical="12dp"
        app:cornerRadius="24dp"
        android:backgroundTint="@color/primary" />

</RelativeLayout>
