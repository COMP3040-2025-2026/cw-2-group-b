<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Day Header (clickable) -->
    <LinearLayout
        android:id="@+id/layout_day_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/tv_day_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monday"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_course_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="3 classes"
            android:textColor="@color/text_hint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_expand_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_drop_down"
            android:contentDescription="Expand/Collapse" />

    </LinearLayout>

    <!-- Courses List (expandable) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/tv_no_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="No classes scheduled"
        android:textColor="@color/text_hint"
        android:textSize="14sp"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="12dp"
        android:gravity="center" />

</LinearLayout>
